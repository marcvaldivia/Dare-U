<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="@color/grey"/>
            <stroke
                android:width="@dimen/button_grey_width"
                android:color="@color/grey"/>
            <corners
                android:radius="@dimen/button_radius" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="@color/grey"/>
            <stroke
                android:width="@dimen/button_grey_width"
                android:color="@color/grey"/>
            <corners
                android:radius="@dimen/button_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="@color/grey"/>
            <stroke
                android:width="@dimen/button_grey_width"
                android:color="@color/grey"/>
            <corners
                android:radius="@dimen/button_radius" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <stroke
                android:width="@dimen/button_grey_width"
                android:color="@color/grey"/>
            <corners
                android:radius="@dimen/button_radius" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/button_grey_padding"
                android:top="@dimen/button_grey_padding"
                android:right="@dimen/button_grey_padding"
                android:bottom="@dimen/button_grey_padding" />
        </shape>
    </item>

</selector>